{
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "double"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-console": 0,
        "comma-dangle": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "modules": true,
        "blockBindings": true
    },
    "extends": "eslint:recommended"
}
